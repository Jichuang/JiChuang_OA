<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="org.hope6537.model.Message" table="Message_DataBase">
		<id name="mesid" type="integer">
			<column name="mesid"></column>
			<generator class="increment"></generator>
		</id>
		<property name="mestitle" type="string">
			<column name="mestitle"></column>
		</property>
		<property name="mesdes" type="string" length="1000">
			<column name="mesdes"></column>
		</property>
		<property name="messtatus" type="string" length="50">
			<column name="messtatus"></column>
		</property>
		<property name="mesinfo" type="string" length="1000">
			<column name="mesinfo"></column>
		</property>
		<property name="mesdate" type="string" length="500">
			<column name="mesdate"></column>
		</property>

		<set name="memberFrom" table="message_member_Database">
			<key column="mesid"></key>
			<many-to-many class="org.hope6537.model.Member" column="mfromid"></many-to-many>
		</set>
		<set name="memberTo" table="message_member_Database">
			<key column="mesid"></key>
			<many-to-many class="org.hope6537.model.Member" column="mtoid"></many-to-many>
		</set>
		
	</class>

</hibernate-mapping>
