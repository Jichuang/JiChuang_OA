<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="org.jichuang.hope6537.blog.model.Blog" table="Blog_DataBase">
		<id name="blogid" type="int">
			<column name="blogid"></column>
			<generator class="increment"></generator>
		</id>
		<property name="blogtitle" type="string">
			<column name="blogtitle"></column>
		</property>
		<property name="blogcont" type="string" length="2500">
			<column name="blogcont"></column>
		</property>
		<property name="bloginfo" type="string" length="50">
			<column name="bloginfo"></column>
		</property>
		<property name="blogdate" type="string">
			<column name="blogdate"></column>
		</property>
		<property name="blogstatus" type="string" length="50">
			<column name="blogstatus"></column>
		</property>
		<many-to-one name="blogmid" cascade="save-update"
			class="org.jichuang.hope6537.base.model.Member" column="blogmid"></many-to-one>
	</class>

</hibernate-mapping>
